@{
    ViewData["Title"] = "Plan";
}

@model Wedding

<nav class="flex justify-between p-10 text-align items-center">
    <h2 class="text-2xl font-semibold">Welcome @ViewBag.loggedUser.FirstName</h2>
    <div class="flex text-xl gap-5">
        <a href="/weddings">Home</a>
        <a href="/weddings/add">Plan a Wedding</a>
        <a href="/users/logout">Logout</a>
    </div>
</nav>
<h1 class="text-5xl font-bold">Plan a Wedding</h1>
<form asp-action="CreateWedding"
    asp-controller="Wedding"
    method="POST"
    class="flex flex-col gap-2 p-8 w-1/3"
    >
    <span asp-validation-for="WedderOne" class="error-message"></span>
    <div class="flex justify-between items-center gap-5">
        <label asp-for="WedderOne" class="label-form"></label>
        <input asp-for="WedderOne" class="input-priv">
    </div>

    <span asp-validation-for="WedderTwo" class="error-message"></span>
    <div class="flex justify-between items-center gap-5">
        <label asp-for="WedderTwo" class="label-form"></label>
        <input asp-for="WedderTwo" class="input-priv">
    </div>

    <span asp-validation-for="WeddingDate" class="error-message"></span>
    <div class="flex justify-between items-center gap-5">
        <label asp-for="WeddingDate" class="label-form">Date: </label>
        <input asp-for="WeddingDate" class="input-priv">
    </div>

    <span asp-validation-for="WeddingAddress" class="error-message"></span>
    <div class="flex justify-between items-center gap-5">
        <label asp-for="WeddingAddress" class="label-form">Address: </label>
        <input asp-for="WeddingAddress" class="input-priv">
    </div>

    <input type="hidden" name="UserId" value="@ViewBag.loggedUser.UserId">

    <div>
        <button class="submit-btn">Create</button>
    </div>
</form>