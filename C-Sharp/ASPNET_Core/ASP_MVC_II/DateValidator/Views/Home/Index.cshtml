@{
    ViewData["Title"] = "Home Page";
}

@model DateModel

<div class="flex flex-col justify-center items-center text-center mt-20">
    <form asp-action="Process" asp-controller="Home" method='post' class="flex flex-col items-center">
        <div class="flex flex-col justify-center items-center gap-3">
            <h2 class="text-3xl font-semibold">Enter a date and I will tell you if it's in the future or not!</h2>
            <label asp-for="UserDate" class="mt-10 mr-5 text-2xl">Date: </label>
            <input asp-for="UserDate" class="border-2 border-black p-2">
            <span asp-validation-for="UserDate" class="text-red-600"></span>
        </div>
        <button class="mt-5 border-2 border-black flex justify-center items-center py-1 px-3 text-xl">Submit</button>
    </form>
</div>
