@{
    ViewData["Title"] = "Dashboard";
}

<div class="flex justify-between mx-20 items-center mt-2 py-10 dash-header">
    <h1 class="text-3xl font-semibold">Weclome @ViewBag.sessionUsername</h1>
    <form action="/logout" method="post">
        <button class="text-2xl font-semibold logout-button">Log Out</button>
    </form>
</div>

<div class="flex flex-col justify-center items-center mt-20">
    <h1 class="text-8xl font-bold">@Context.Session.GetInt32("number")</h1>

    <div class="flex flex-col justify-center items-center gap-3">
        <div class="flex items-center gap-5 mt-3">

            <form action="/changeNumber" method="post">
                <input type="hidden" name="operation" value="add">
                <button class="text-5xl math-button">+ 1</button>
            </form>

            <form action="/changeNumber" method="post">
                <input type="hidden" name="operation" value="minus">
                <button class="text-5xl math-button">- 1</button>
            </form>
        </div>
        <div class="flex items-center gap-5">
            <form action="/changeNumber" method="post">
                <input type="hidden" name="operation" value="times">
                <button class="text-5xl math-button">X 2</button>
            </form>
            <form action="/changeNumber" method="post">
                <input type="hidden" name="operation" value="random">
                <button class="text-5xl math-button">+ Random</button>
            </form>
        </div>
    </div>
</div>