@{
    ViewData["Title"] = "Products";
}

@model Product

<div class="flex gap-20 mt-16">
    <div class="flex flex-1 flex-col justif-center items-center item-container">
        <h2 class="title-header-text mb-5">New Product</h2>
        <form asp-action="CreateProduct" asp-controller="Product" method="POST" class="flex flex-col justify-evenly gap-2">
            <span asp-validation-for="Name" class="error-message"></span>
            <div class="flex">
                <label asp-for="Name" class="label-priv"></label>
                <input asp-for="Name" class="input-priv">
            </div>

            <span asp-validation-for="Description" class="error-message"></span>
            <div class="flex">
                <label asp-for="Description" class="label-priv"></label>
                <input asp-for="Description" class="input-priv">
            </div>

            <span asp-validation-for="Price" class="error-message"></span>
            <div class="flex">
                <label asp-for="Price" class="label-priv"></label>
                <input asp-for="Price" class="input-priv">
            </div>

            <div>
                <button class="submit-btn">Submit</button>
            </div>

        </form>

    </div>

    <div class="flex-1">
        <h2 class="title-header-text mb-5">All Products</h2>
        <div class="flex flex-col">
            @foreach (Product item in ViewBag.allProducts)
            {
                <a href="/products/@item.ProductId" class="product-nav">@item.Name</a>
            }
        </div>
    </div>
</div>