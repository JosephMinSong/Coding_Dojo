<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChefsNDishes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChefsNDishes.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true">
</head>
<body>
    <header class="flex justify-center items-center mt-10 gap-10">
        <a href="/" class="nav-link-priv @((string)ViewData["Title"] == "Home Page" ? "bold" : "")">Chefs</a>
        <a href="/dishes" class="nav-link-priv @((string)ViewData["Title"] == "Dishes" ? "bold" : "")">Dishes</a>
        <a href="/chefs/add" class="nav-link-priv @((string)ViewData["Title"] == "Add Chef" ? "bold" : "")">Add a Chef</a>
        <a href="/dishes/add" class="nav-link-priv @((string)ViewData["Title"] == "Add Dish" ? "bold" : "")">Add a Dish</a>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ChefsNDishes - Built by Joseph Song
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
