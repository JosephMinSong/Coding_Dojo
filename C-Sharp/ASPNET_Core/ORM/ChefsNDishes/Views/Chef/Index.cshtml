@{
    ViewData["Title"] = "Home Page";
}

@model List<Chef>

<div class="title-header">
    <h1 class="title-header-text">Check out our roster of chefs!</h1>
</div>

<table class="table table-fixed mt-10">
    <thead>
        <tr>
            <td>Name</td>
            <td>Age</td>
            <td># of Dishes</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Chef chef in Model)
        {
            <tr>
                <td>@chef.FirstName @chef.LastName</td>
                <td>@(DateTime.Now.Year - chef.Birthday.Year)</td>
                <td>@chef.AllDishes.Count</td>
            </tr>
        }
    </tbody>
</table>