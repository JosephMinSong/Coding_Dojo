@model User

<form action="" class="mt-10 flex flex-col gap-2">
    <div class="flex gap-10 items-center justify-between">
        <label asp-for="Email" class="text-2xl">Email: </label>
        <input asp-for="Email" class="input-priv">
    </div>

    <div class="flex gap-10 items-center justify-between">
        <label asp-for="Password" class="text-2xl">Password: </label>
        <input asp-for="Password" class="input-priv">
    </div>

    <div class="flex justify-center items-center mt-10">
        <button class="submit-btn">Login</button>
    </div>
</form>